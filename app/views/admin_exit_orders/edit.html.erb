<h2>Editando Orden de Salida <%= @exit_order.document %></h2>

<div id="general">
	<% form_for @exit_order, :url=>{:controller=>"admin_exit_orders", :action=>"update", :id=>@exit_order} do |f| -%>
	  

	<dl>

		<div class="single_column_left">

			<dt>
				<%= f.label :document, "Documento:" %>
			</dt>

			<dd>
				<%= f.text_field :document %>
			</dd>

		</div>


				
	<div class="single_column_left">


				<dt>
					<%= f.label :store_id, "Tienda:" %>
				</dt>
		
				<dd>
					<%= f.collection_select :store_id, Store.find(:all),:id,:name %>
				</dd>
		

	</div>
	
	<div class="single_column_left">
		
			<dt>			
			<%= f.label :client_id, "Cliente" %>
			</dt>

			<dd>
			<%= f.collection_select :client_id, Client.find(:all), :id,:name %>
			</dd>
		
				
	</div>


	<div class="single_column_left">
		
		
			<dt class="odd">				
				<%= f.label :sending_date, "Fecha de Salida: " %>
			</dt>

			<dd class="odd">
			<div class="small_fields">
			<%= f.date_select :sending_date, :class=>"small_fields"%>
			</div>
			</dd>
		
	</div>
	
	<div class="single_column_left">
		
		
			<dt class="odd">				
				<%= f.label :driver_name, "Nombre Trabajador: " %>
			</dt>

			<dd class="odd">
			<%= f.text_field :driver_name %>
			</dd>
	
		
	</div>
	
	<div class="single_column_left">
		
		
			<dt class="odd">				
				<%= f.label :driver_dni, "DNI: " %>
			</dt>

			<dd class="odd">
			<%= f.text_field :driver_dni %>
			</dd>
		
	</div>
	
	<div class="single_column_left">
		
		
			<dt class="odd">				
				<%= f.label :extra_data, "Datos Complementarios: " %>
			</dt>

			<dd class="odd">
			<%= f.text_area :extra_data %>
			</dd>
		
	</div>
	
	
	</dl>
	
	


</div>
<div id="endzone">
	<%= f.submit "Actualizar", :class=>"form_button",:confirm=>"&iquest;Finalizar actualizac&oacute;n de Orden de Salida?" %> <%= link_to "reabrir gu&iacute;a",reopen_admin_exit_order_catalogue_path(@exit_order.id), :class=>"form_button_inline" %> <p>o <%= link_to "cancelar",admin_exit_orders_catalogue_path %></p>
	</div>
<% end -%>


