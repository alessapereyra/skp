<div id="detalle">
<table>
	<thead>
	<tr>
		<th>C&oacute;digo</th>
		<th>Imagen</th>		
		<th>C&oacute;digo de Proveedor</th>
		<th>Nombre</th>		
		<th>Descripci&oacute;n</th>
		<th>Stock</th>
		<th>Precio de Costo</th>
		<th></th>	
		<th></th>			
	</tr>						
	</thead>
	<tbody>
<%- @products.each do |product| -%>

		<tr class="<%= cycle("even", "odd") -%>">
			<td><div style="width:80px;"><%= product.code %></div></td>			
			<td><%= link_to image_tag(product.picture.thumb.url, :width=>50), product.picture.url unless product.picture.nil? %></td>			
			<td><div style="width:80px;"><%= display_provider_codes(product) %></div></td>
			<td><div style="width:100px;"><%= product.name %></div></td>			
			<td><div style="width:100px;"><%= strip_tags product.description %></div></td>
			<td><%= product.stock %></td>
			<td><%= product.cost_price %></td>			
			<td><%= link_to "Editar", edit_product_path(product.id) %></td>
			<td><%= link_to 'Eliminar', product, :confirm => 'Seguro?', :method => :delete %></td>
			
<%- end -%>
	</tbody>
</table>

<%= will_paginate @products %>
	
</div>

