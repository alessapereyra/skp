<h3>Facturas</h3>

<table>
	<thead>
	<tr>
		<th>Número</th>		
		<th>Tipo</th>
		<th>Tienda</th>		
		<th>Cliente</th>		
		<th>Fecha</th>
		<th>Total</th>
		<th>Costo</th>	
		<th>Pago</th>				
		<th></th>
	</tr>				
	</thead>
	<tbody>		
	<% @facturas.each do |order| %>
	<tr class="<%= cycle("even", "odd") -%>">
		<td><%= order.number %></td>		
		<td><%= order.name %></td>
		<td><%= order.store.name %></td>
		<td><div style="width:100px;"><%= order.client.name unless order.client.nil? %></div></td>		
		<td><%= order.order_date.strftime("%d/%m/%y") %></td>
		<td><%= order.price %></td>
		<td><%= order.cost %></td>		
		<td><%= order.credit_card %></td>				
		<td><%= link_to "Ver orden", order_report_path(order.id) %></td>
	</tr>
	<% end %>
	</tbody>

</table>

<div id="results">
	<div class="result">
	Ingresos de Ventas: S/.<%= @facturas_totals %>
	</div>
	<div class="result">
	Costos de Ventas: S/.<%= @facturas_costs %>
	</div>
	
	<div class="result">
	Utilidades de Ventas: S/.<%= @facturas_totals - @facturas_costs %>
	</div>	
</div>


