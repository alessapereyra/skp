<% form_for :order do |f| -%>


<fieldset>
	<legend>Datos de la venta</legend> 
	<p>Ingrese la informaci&oacute;n del cliente (o agregue uno nuevo)</p>
	<dl>


	
	<%= f.hidden_field :type %>

		<div class="single_column_left">
					<dt>
						<%= f.label :number, "N&uacute;mero de boleta:" %>
					</dt>

					<dd>
						<%= f.text_field :number %>
					</dd>

		</div>



	<div class="single_column_left">
				<dt class="odd">
					<%= f.label :client_id, "Cliente:" %>
				</dt>
		
				<dd class="odd">
					<%= f.text_field :client_id, :autocomplete =>"off" %>
					<%= hidden_field_tag "order[hidden_client_id]", "",:class=>"order_hidden_client_id" %>
				</dd>
		
	</div>


	<div class="single_column_left">
		
		
				<dt>				
					<%= f.label :order_date, "Fecha de Venta: " %>
				</dt>
					
				<dd>
				<div class="small_fields">
				<%= f.date_select :order_date %>
				</div>
				</dd>			
				
	</div>


	<div class="single_column_left">
		
		
				<dt>				
					<%= f.label :credit_card, "Forma de Pago " %>
				</dt>
					
				<dd>
					<%= f.select :credit_card, @credit_cards %>
				</dd>			
				
	</div>


	<div class="single_column_left">
		
		
				<dt>				
					<%= f.label :unload_stock, "Descargar Stock? " %>
				</dt>
					
				<dd>
					<%= f.check_box :unload_stock %>
				</dd>			
				
	</div>


	</dl>
	
	
</fieldset>

	<%= render :partial=>"add_products_form" %>



<div id="endzone">
<%= f.submit "Finalizar Venta", :class=>'form_button' %>	<p>o <%= link_to "revisa los reportes", reports_path %></p>
</div>




<% end %>
