<% fields_for :sending_guide_detail, @sending_guide_detail do |sod| %>

<fieldset id="fieldset_sending">
	<legend>Agregar productos</legend> 

	<dl>	


			<div class="single_column_left">

				<dt><%= sod.label :product_id, "Producto:" %></dt>
				<dd><%= sod.text_field :product_id, :autocomplete =>"off" %>
				<%= hidden_field_tag "sending_guide_detail[hidden_product_id]", "", :class=>"sending_guide_detail_hidden_product_id" %>
				</dd>

			</div>
			
			<div class="single_column_left">
				
				<dt>
						<%= sod.label :quantity, "Cantidad:" %>
				</dt>
				
				<dd>
						<%= sod.text_field :quantity, :class=>'small_fields' %>
				</dd>

			</div>

			<%= submit_to_remote "sending_guide_detail_button", "Agregar Producto", :url=>{ :controller=>'sending_guides',:action=>'add_product' }, :html=>{:class=>'sending_submit button form_button'} %>

	</dl>	
</fieldset>	
<% end %>