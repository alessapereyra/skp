	<fieldset>
		<dl>
    	<dt><%= f.label :username %></dt>
    	<dd><%= f.text_field :username %></dd>

    	<dt><%= f.label :email %></dt>
    	<dd><%= f.text_field :email %></dd>

    	<dt><%= f.label :role_id %></dt>
    	<dd><%= f.collection_select :role_id, Role.find(:all),:id,:name %></dd>

    	<dt><%= f.label :password %></dt>
    	<dd><%= f.password_field :password %></dd>

    	<dt><%= f.label :store_id %></dt>
		<dd><%= f.collection_select :store_id, Store.find(:all),:id,:name %></d>
	
	</dl>
	</fieldset>

